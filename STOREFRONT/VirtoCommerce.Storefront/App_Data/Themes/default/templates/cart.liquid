<div class="cart-row" ng-if="cartErrorOccured">
    <div class="note form-error">Cart error occured!</div>
</div>

<span ng-if="cart.ItemsCount == 0">
    <h2>{{ 'cart.general.empty' | t }}</h2>
    <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
</span>

<form name="formCart" novalidate="novalidate" ng-show="cart.ItemsCount > 0">
    <div class="ajax-informer" ng-class="{ 'fade': cartIsUpdating }">
        <div class="loader"></div>
        <span>{{ 'cart.general.updating_cart_message' | t }}</span>
    </div>
    <h1 class="h2">{{ 'cart.general.title' | t }}</h1>
    <div class="cart-row" ng-repeat="lineItem in cart.Items">
        <div class="grid">
            <div class="grid-item large--seven-twelfths">
                <div class="grid">
                    <div class="grid-item one-third large--one-quarter">
                        <span class="cart-image">
                            <img ng-src="{( lineItem.ImageUrl )}" />
                        </span>
                    </div>
                    <div class="grid-item two-thirds large--three-quarters">
                        <span ng-bind="lineItem.Name"></span>
                        <div class="note form-error" ng-if="lineItem.ValidationErrors.length">
                            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductUnavailableError'" ng-bind="'Product is currently unavailable!'"></span>
                            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" ng-bind="'Product price has been changed! New price is: ' + lineItem.ValidationErrors[0].NewPrice.FormatedAmount"></span>
                            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductQuantityError'" ng-bind="'Product quantity exceeded! Available quantity is: ' + lineItem.ValidationErrors[0].AvailableQuantity"></span>
                            <a ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" href="" style="color: #204a80; margin-left: 20px;" ng-click="reapplyLineItem(lineItem.Id)">Apply</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                <div class="grid">
                    <div class="grid-item one-half medium-down--one-third" style="text-align: center;">
                        <div class="js-qty">
                            <input class="js-num" name="{( 'item' + lineItem.Id )}" type="number" ng-model="lineItem.Quantity" ng-blur="changeLineItemQuantity(lineItem.Id, lineItem.Quantity)" />
                            <span class="js--qty-adjuster js--add" ng-click="changeLineItemQuantity(lineItem.Id, lineItem.Quantity + 1)">+</span>
                            <span class="js--qty-adjuster js--minus" ng-click="changeLineItemQuantity(lineItem.Id, lineItem.Quantity - 1)">-</span>
                        </div>
                        <div class="note form-error" ng-if="formCart['item' + lineItem.Id].$error.number">Please enter a number</div>
                    </div>
                    <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                        <span class="h2">
                            <small ng-bind="lineItem.PlacedPrice.FormatedAmount"></small>
                        </span>
                        <span style="text-decoration: line-through;" ng-if="lineItem.ListPrice.Amount != lineItem.PlacedPrice.Amount" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                    </div>
                    <div class="grid-item one-sixth medium-down--one-third text-right">
                        <a class="icon-fallback-text btn-secondary remove" href="" ng-click="removeLineItem(lineItem.Id)">
                            <span class="icon icon-x" aria-hidden="true"></span>
                            <span class="fallback-text">{{ 'cart.general.remove' | t }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-row">
        <div class="grid">
            <div class="grid-item large--one-half">
                <label for="cartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                <textarea class="input-full" ng-bind="cart.Comment"></textarea>
            </div>
            <div class="grid-item text-right large--one-half">
                <div class="cart-subtotal">
                    {{ 'cart.general.subtotal' | t }}
                    <span class="h1 cart-subtotal--price">
                        <small ng-bind="cart.SubTotal.FormatedAmount"></small>
                    </span>
                </div>
                <button type="button" ng-class="{ 'btn': !cartIsUpdating, 'btn-secondary': cartIsUpdating || cartErrorOccured || cart.HasValidationErrors }" ng-disabled="cartIsUpdating || cart.HasValidationErrors" ng-click="outerRedirect('{{ '/cart/checkout/#/customer-information' | absolute_url }}')">
                    <span class="icon icon-cart"></span>
                    {{ 'cart.general.checkout' | t }}
                </button>
            </div>
        </div>
    </div>
</form>

{% comment %}
<div class="ajax-informer" ng-class="{ 'error': errorOccured, 'fade': isUpdating || errorOccured }">
    <div class="loader" ng-if="!errorOccured"></div>
    <span ng-if="!errorOccured">{{ 'cart.general.updating_cart_message' | t }}</span>
    <span ng-if="errorOccured">{{ 'cart.general.updating_cart_error_message' | t }}</span>
</div>
<form action="" method="post" ng-if="cart.Items.length">
    <h1 class="h2">{{ 'cart.general.title' | t }}</h1>
    <div class="cart-row" ng-repeat="lineItem in cart.Items" ng-style="{ 'padding-top' : lineItem.ValidationErrors.length ? '0' : '30px' }">
        <div class="ajax-informer error fade" ng-if="lineItem.ValidationErrors.length">
            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductUnavailableError'" ng-bind="'Product is currently unavailable!'"></span>
            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" ng-bind="'Product price has been changed! New price is: ' + lineItem.ValidationErrors[0].NewPrice.FormatedAmount"></span>
            <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductQuantityError'" ng-bind="'Product quantity exceeded! Available quantity is: ' + lineItem.ValidationErrors[0].AvailableQuantity"></span>
            <a ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" href="" style="color: #204a80; margin-left: 20px;" ng-click="reapplyLineItem(lineItem.Id)">Apply</a>
        </div>
        <div class="grid" ng-style="{ 'margin-top' : lineItem.ValidationErrors.length ? '15px' : '0' }">
            <div class="grid-item large--seven-twelfths">
                <div class="grid">
                    <div class="grid-item one-third large--one-quarter">
                        <a class="cart-image" href="">
                            <img alt="{( lineItem.Name )}" ng-src="{( lineItem.ImageUrl )}" />
                        </a>
                    </div>
                    <div class="grid-item two-thirds large--three-quarters">
                        <a href="{( lineItem.url )}" ng-bind="lineItem.Name"></a>
                        <p ng-repeat="property in lineItem.Properties">
                        </p>
                    </div>
                </div>
            </div>
            <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                <div class="grid">
                    <div class="grid-item one-half medium-down--one-third text-right">
                        <div class="js-qty">
                            <input class="js-num" disabled="disabled" type="text" ng-model="lineItem.Quantity" />
                            <span class="js--qty-adjuster js--add" ng-click="changeLineItem(lineItem.Id, lineItem.Quantity + 1)">+</span>
                            <span class="js--qty-adjuster js--minus" ng-click="changeLineItem(lineItem.Id, lineItem.Quantity - 1)">-</span>
                        </div>
                    </div>
                    <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                        <span ng-if="lineItem.ListPrice.Amount == lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount == 0">
                            <span class="h2">
                                <small ng-bind="lineItem.ListPrice.FormatedAmount"></small>
                            </span>
                        </span>
                        <span ng-if="lineItem.ListPrice.Amount > lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount == 0">
                            <span class="h2">
                                <small ng-bind="lineItem.SalePrice.FormatedAmount"></small>
                            </span>
                            <span style="text-decoration: line-through;" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                        </span>
                        <span ng-if="lineItem.ListPrice.Amount == lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount > 0">
                            <span class="h2">
                                <small ng-bind="lineItem.PlacedPrice.FormatedAmount"></small>
                            </span>
                            <span style="text-decoration: line-through;" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                        </span>
                        <span ng-if="lineItem.ListPrice.Amount > lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount > 0">
                            <span class="h2">
                                <small ng-bind="lineItem.PlacedPrice.FormatedAmount"></small>
                            </span>
                            <span style="text-decoration: line-through;" ng-bind="lineItem.SalePrice.FormatedAmount"></span>
                        </span>
                    </div>
                    <div class="grid-item one-sixth medium-down--one-third text-right">
                        <a class="icon-fallback-text btn-secondary remove" href="" ng-click="removeLineItem(lineItem.Id)">
                            <span class="icon icon-x" aria-hidden="true"></span>
                            <span class="fallback-text">{{ 'cart.general.remove' | t }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-row">
        <div class="grid">
            <div class="grid-item large--one-half">
                <label for="cartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                <textarea class="input-full">{( cart.Comment )}</textarea>
            </div>
            <div class="grid-item text-right large--one-half">
                <div class="cart-subtotal">
                    {{ 'cart.general.subtotal' | t }}
                    <span class="h1 cart-subtotal--price">
                        <small ng-bind="cart.SubTotal.FormatedAmount"></small>
                    </span>
                </div>
                <button type="button" ng-class="{ 'btn': !isUpdating, 'btn-secondary': isUpdating || cart.HasValidationErrors }" ng-disabled="isUpdating || cart.HasValidationErrors" ng-click="outerRedirect('{{ '/cart/checkout/#/customer-information' | absolute_url }}')">
                    <span class="icon icon-cart"></span>
                    {{ 'cart.general.checkout' | t }}
                </button>
            </div>
        </div>
    </div>
</form>
<span ng-if="!cart.Items.length">
    <h2>{{ 'cart.general.empty' | t }}</h2>
    <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
</span>
{% endcomment %}