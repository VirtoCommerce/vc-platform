{% layout settings.customer_layout %}

<h1>{{ 'customer.account.title' | t }}</h1>

{% include 'customer-menu' %}

<hr class="hr--small">

<div class="grid">

  <div class="grid-item one-half medium-down--one-whole">
      <h4>{{ 'customer.edit_profile.title' | t }}</h4>
      <form action="{{'/account/profile' | absolute_url}}" method="post">
      {% include 'form-errors-custom' %}

      <label for="first_name" class="hidden-label">{{ 'customer.edit_profile.first_name' | t }}</label>
      <input type="text" value="{{customer.first_name}}" name="firstName" id="first_name" placeholder="{{ 'customer.edit_profile.first_name' | t }}" {% if form.errors contains "first_name" %} class="error"{% endif %} autocapitalize="words" autofocus>

      <label for="last_name" class="hidden-label">{{ 'customer.edit_profile.last_name' | t }}</label>
      <input type="text" value="{{customer.last_name}}" name="lastName" id="last_name" placeholder="{{ 'customer.edit_profile.last_name' | t }}" {% if form.errors contains "last_name" %} class="error"{% endif %} autocapitalize="words">

      <label for="email" class="hidden-label">{{ 'customer.edit_profile.email' | t }}</label>
      <input type="email" value="{{customer.email}}" name="email" id="email" placeholder="{{ 'customer.edit_profile.email' | t }}" {% if form.errors contains "email" %} class="error"{% endif %} autocorrect="off" autocapitalize="off">

      <div class="text-center">
        <input type="submit" class="btn" value="{{ 'customer.edit_profile.submit' | t }}">
      </div>
    </form>
  </div>

  <div class="grid-item one-half medium-down--one-whole">
      <h4>{{ 'customer.change_password.title' | t }}</h4>
      <form action="{{'/account/password' | absolute_url}}" method="post">
        {% include 'form-errors-custom' %}

        <label for="old_password" class="hidden-label">{{ 'customer.change_password.old_password' | t }}</label>
        <input type="password" value="" name="oldPassword" id="old_password" placeholder="{{ 'customer.change_password.old_password' | t }}" {% if form.errors contains "old_password" %} class="error"{% endif %}>

        <label for="new_password" class="hidden-label">{{ 'customer.change_password.new_password' | t }}</label>
        <input type="password" value="" name="newPassword" id="new_password" placeholder="{{ 'customer.change_password.new_password' | t }}" {% if form.errors contains "new_password" %} class="error"{% endif %}>

        <label for="new_password_confirm" class="hidden-label">{{ 'customer.change_password.new_password_confirm' | t }}</label>
        <input type="password" value="" name="newPasswordConfirm" id="new_password_confirm" placeholder="{{ 'customer.change_password.new_password_confirm' | t }}" {% if form.errors contains "new_password_confirm" %} class="error"{% endif %}>

        <div class="text-center">
          <input type="submit" class="btn" value="{{ 'customer.change_password.submit' | t }}">
        </div>
      </form>
  </div>

</div>

<hr class="hr--small">

<div class="grid">

  <div class="grid-item two-thirds medium-down--one-whole">
    <h4>{{ 'customer.orders.title' | t }}</h4>

    {% paginate customer.orders by 5 %}
    {% if customer.orders.size != 0 %}
      <table class="full">
        <thead>
          <tr>
            <th>{{ 'customer.orders.order_number' | t }}</th>
            <th>{{ 'customer.orders.date' | t }}</th>
            <th>{{ 'customer.orders.payment_status' | t }}</th>
            <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
            <th>{{ 'customer.orders.total' | t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for order in customer.orders %}
            <tr>
              <td>{{ order.name | link_to: order.customer_url }}</td>
              <td>{{ order.created_at | date: format: 'month_day_year' }}</td>
              <td>{{ order.financial_status_label }}</td>
              <td>{{ order.fulfillment_status_label }}</td>
              <td>{{ order.total_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      {% if paginate.pages > 1 %}
        {% include 'pagination-custom' %}
      {% endif %}
    {% else %}
      <p>{{ 'customer.orders.none' | t }}</p>
    {% endif %}
    {% endpaginate %}
  </div>

  <div class="grid-item one-third medium-down--one-whole">
    <h4>{{ 'customer.account.details' | t }}</h4>

    <h5>{{ customer.name }}</h5>

    {% if customer.default_address != nil %}
      <p>
      {{ customer.default_address.address1 }}<br>

      {% if customer.default_address.address2 != "" %}
        {{ customer.default_address.address2 }}<br>
      {% endif %}

      {% if customer.default_address.city != "" %}
        {{ customer.default_address.city }}<br>
      {% endif %}

      {% if customer.default_address.province_code != "" %}
        {{ customer.default_address.province_code | upcase }}<br>
      {% endif %}

      {% if customer.default_address.zip != "" %}
        {{ customer.default_address.zip | upcase }}<br>
      {% endif %}

      {% if customer.default_address.country != "" %}
        {{ customer.default_address.country }}<br>
      {% endif %}

      {% if customer.default_address.phone != "" %}
        {{ customer.default_address.phone }}
      {% endif %}

      </p>

    {% endif %}

    <p><a href="{{ '/account/addresses' | absolute_url }}">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a></p>
  </div>

</div>
