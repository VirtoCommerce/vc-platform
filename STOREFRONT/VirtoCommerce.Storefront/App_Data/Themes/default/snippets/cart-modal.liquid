<div class="ajaxify-modal" id="ajaxifyModal" style="opacity: 1;" ng-class="{ 'is-visible': recentCartItemModalVisible }">
    <button class="ajaxifyCart--close" title="{{ 'cart.general.close_cart' | t }}" ng-click="toggleRecentCartItemModal(recentCartItemModalVisible)">{{ 'cart.general.close_cart' | t }}</button>
    <div class="ajaxifyCart--content" id="ajaxifyCart">
        <h1 class="h2" ng-if="cartIsUpdating">Adding product to cart...</h1>
        <div class="cart-row" ng-if="cartIsUpdating">
            <div class="sk-folding-cube">
                <div class="sk-cube1 sk-cube"></div>
                <div class="sk-cube2 sk-cube"></div>
                <div class="sk-cube4 sk-cube"></div>
                <div class="sk-cube3 sk-cube"></div>
            </div>
        </div>

        <h1 class="h2" ng-if="!cartIsUpdating && !cartErrorOccured">Product added to cart</h1>
        <div class="cart-row" ng-if="!cartIsUpdating && !cartErrorOccured">
            <div class="grid">
                <div class="grid-item large--seven-twelfths">
                    <div class="grid">
                        <div class="grid-item one-third large--one-quarter">
                            <span class="cart-image">
                                <img src="{( cart.RecentlyAddedItem.ImageUrl )}" />
                            </span>
                        </div>
                        <div class="grid-item two-thirds large--three-quarters">
                            <a ng-bind="cart.RecentlyAddedItem.Name"></a>
                            <div class="note form-error" ng-if="cart.RecentlyAddedItem.ValidationErrors.length">
                                <span ng-if="cart.RecentlyAddedItem.ValidationErrors[0].ErrorCode == 'ProductUnavailableError'" ng-bind="'Product is currently unavailable!'"></span>
                                <span ng-if="cart.RecentlyAddedItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" ng-bind="'Product price has been changed! New price is: ' + cart.RecentlyAddedItem.ValidationErrors[0].NewPrice.FormatedAmount"></span>
                                <span ng-if="cart.RecentlyAddedItem.ValidationErrors[0].ErrorCode == 'ProductQuantityError'" ng-bind="'Product quantity exceeded! Available quantity is: ' + cart.RecentlyAddedItem.ValidationErrors[0].AvailableQuantity"></span>
                                <a ng-if="cart.RecentlyAddedItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" href="" style="color: #204a80; margin-left: 20px;" ng-click="reapplyLineItem(cart.RecentlyAddedItem.Id)">Apply</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                    <div class="grid">
                        <div class="grid-item one-half medium-down--one-third text-right">
                            <div class="ajaxifyCart--qty" ng-bind="cart.RecentlyAddedItem.Quantity"></div>
                        </div>
                        <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                            <span class="h2" ng-bind="cart.RecentlyAddedItem.PlacedPrice.FormatedAmount"></span>
                            <span style="text-decoration: line-through;" ng-if="cart.RecentlyAddedItem.ListPrice.Amount != cart.RecentlyAddedItem.PlacedPrice.Amount" ng-bind="cart.RecentlyAddedItem.ListPrice.FormatedAmount"></span>
                        </div>
                        <div class="grid-item one-sixth medium-down--one-third text-right">
                            <a class="icon-fallback-text btn-secondary remove ajaxifyCart--remove" href="" ng-click="removeLineItem(cart.RecentlyAddedItem.Id)">
                                <span class="icon icon-x" aria-hidden="true"></span>
                                <span class="fallback-text">{{ 'cart.general.remove' | t }}</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="cart-row" ng-if="!cartIsUpdating && !cartErrorOccured && cart.ValidationErrors.length">
            <div class="note form-error">
            </div>
        </div>

        <h1 class="h2" ng-if="cartErrorOccured">Cart error occured</h1>
        <div class="cart-row" ng-if="cartErrorOccured">
            <div class="note form-error" ng-bind="cartErrorMessage"></div>
        </div>

        <div class="cart-row">
            <div class="grid">
                <div class="grid-item text-right ">
                    <div class="cart-subtotal" style="mergin-bottom: 0;">
                        Cart items
                        <span class="h1 cart-subtotal--price">
                            <small ng-bind="cart.ItemsCount"></small>
                        </span>
                    </div>
                    <div class="cart-subtotal">
                        {{ 'cart.general.subtotal' | t }}
                        <span class="h1 cart-subtotal--price">
                            <small ng-bind="cart.SubTotal.FormatedAmount"></small>
                        </span>
                    </div>
                    <button type="button" class="btn" ng-click="outerRedirect('{{ '/cart' | absolute_url }}')">
                        <span class="icon icon-cart"></span>
                        Cart
                    </button>
                    <button type="button" ng-class="{ 'btn': !cartIsUpdating, 'btn-secondary': cartIsUpdating || cartErrorOccured || cart.CurrentlyAddedItem.ValidationErrors.length }" ng-disabled="cartIsUpdating || cart.CurrentlyAddedItem.ValidationErrors.length" ng-click="outerRedirect('{{ '/cart/checkout/#/customer-information' | absolute_url }}')">
                        <span class="icon icon-cart"></span>
                        {{ 'cart.general.checkout' | t }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="ajaxifyCart-overlay" ng-if="recentCartItemModalVisible"></div>

{% comment %}
<div class="ajaxify-modal" id="ajaxifyModal" style="opacity: 1;" ng-class="{ 'is-visible': isCartModalVisible }">
    <button class="ajaxifyCart--close" title="Close Cart" ng-click="toggleCartModal(isCartModalVisible)">{{ 'cart.general.close_cart' | t }}</button>
    <div class="ajaxifyCart--content" id="ajaxifyCart">
        <div class="ajax-informer" ng-class="{ 'error': errorOccured, 'fade': isUpdating || errorOccured }">
            <div class="loader" ng-if="!errorOccured"></div>
            <span ng-if="!errorOccured">{{ 'cart.general.updating_cart_message' | t }}</span>
            <span ng-if="errorOccured">{{ 'cart.general.updating_cart_error_message' | t }}</span>
        </div>
        <span ng-if="!cart.Items.length">
            <h2>{{ 'cart.general.empty' | t }}</h2>
            <span>{{ 'cart.general.continue_browsing_html' | t }}</span>
        </span>
        <span ng-if="cart.Items.length">
            <h1 class="h2">{{ 'cart.general.title' | t }}</h1>
            <div class="cart-row" ng-repeat="lineItem in cart.Items" ng-style="{ 'padding-top' : lineItem.ValidationErrors.length ? '0' : '30px' }">
                <div class="ajax-informer error fade" ng-if="lineItem.ValidationErrors.length">
                    <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductUnavailableError'" ng-bind="'Product is currently unavailable!'"></span>
                    <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" ng-bind="'Product price has been changed! New price is: ' + lineItem.ValidationErrors[0].NewPrice.FormatedAmount"></span>
                    <span ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductQuantityError'" ng-bind="'Product quantity exceeded! Available quantity is: ' + lineItem.ValidationErrors[0].AvailableQuantity"></span>
                    <a ng-if="lineItem.ValidationErrors[0].ErrorCode == 'ProductPriceError'" href="" style="color: #204a80; margin-left: 20px;" ng-click="reapplyLineItem(lineItem.Id)">Apply</a>
                </div>
                <div class="grid" ng-style="{ 'margin-top' : lineItem.ValidationErrors.length ? '15px' : '0' }">
                    <div class="grid-item large--seven-twelfths">
                        <div class="grid">
                            <div class="grid-item one-third large--one-quarter">
                                <a class="cart-image" href="">
                                    <img alt="{( lineItem.Name )}" ng-src="{( lineItem.ImageUrl )}" />
                                </a>
                            </div>
                            <div class="grid-item two-thirds large--three-quarters">
                                <a href="" ng-bind="lineItem.Name"></a>
                            </div>
                        </div>
                    </div>
                    <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                        <div class="grid">
                            <div class="grid-item one-half medium-down--one-third text-right">
                                <div class="ajaxifyCart--qty">
                                    <input class="ajaxifyCart--num" disabled="disabled" type="text" ng-model="lineItem.Quantity" />
                                    <span class="ajaxifyCart--qty-adjuster ajaxifyCart--add" ng-click="changeLineItem(lineItem.Id, lineItem.Quantity + 1)">+</span>
                                    <span class="ajaxifyCart--qty-adjuster ajaxifyCart--minus" ng-click="changeLineItem(lineItem.Id, lineItem.Quantity - 1)">-</span>
                                </div>
                            </div>
                            <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                                <span ng-if="lineItem.ListPrice.Amount == lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount == 0">
                                    <span class="h2" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                                </span>
                                <span ng-if="lineItem.ListPrice.Amount > lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount == 0">
                                    <span class="h2" ng-bind="lineItem.SalePrice.FormatedAmount"></span>
                                    <span style="text-decoration: line-through;" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                                </span>
                                <span ng-if="lineItem.ListPrice.Amount == lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount > 0">
                                    <span class="h2" ng-bind="lineItem.PlacedPrice.FormatedAmount"></span>
                                    <span style="text-decoration: line-through;" ng-bind="lineItem.ListPrice.FormatedAmount"></span>
                                </span>
                                <span ng-if="lineItem.ListPrice.Amount > lineItem.SalePrice.Amount && lineItem.DiscountTotal.Amount > 0">
                                    <span class="h2" ng-bind="lineItem.PlacedPrice.FormatedAmount"></span>
                                    <span style="text-decoration: line-through;" ng-bind="lineItem.SalePrice.FormatedAmount"></span>
                                </span>
                            </div>
                            <div class="grid-item one-sixth medium-down--one-third text-right">
                                <a class="icon-fallback-text btn-secondary remove ajaxifyCart--remove" href="" ng-mouseup="removeLineItem(lineItem.Id)">
                                    <span class="icon icon-x" aria-hidden="true"></span>
                                    <span class="fallback-text">{{ 'cart.general.remove' | t }}</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cart-row">
                <div class="grid">
                    <div class="grid-item text-right ">
                        <div class="cart-subtotal">
                            {{ 'cart.general.subtotal' | t }}
                            <span class="h1 cart-subtotal--price">
                                <small ng-bind="cart.SubTotal.FormatedAmount"></small>
                            </span>
                        </div>
                        <input class="btn-secondary update-cart" type="button" value="Update cart" />
                        <button name="checkout" type="button" ng-class="{ 'btn': !isUpdating, 'btn-secondary': isUpdating || cart.HasValidationErrors }" ng-disabled="isUpdating || cart.HasValidationErrors" ng-click="outerRedirect('{{ '/cart/checkout/#/customer-information' | absolute_url }}')">
                            <span class="icon icon-cart"></span>
                            {{ 'cart.general.checkout' | t }}
                        </button>
                    </div>
                </div>
            </div>
        </span>
    </div>
</div>
<div id="ajaxifyCart-overlay" ng-if="isCartModalVisible"></div>
{% endcomment %}