{% unless grid_item_width %}
    {% assign grid_item_width = 'large--one-quarter medium-down--one-half' %}
{% endunless %}

{% unless current_collection %}
    {% assign current_collection = collection %}
{% endunless %}

{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
    {% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if product.available  %}
    {% assign sold_out = false %}
{% endif %}

{% comment %}
    Select the product image size from settings.
{% endcomment %}
{% assign image_size = settings.collection_prod_image_sizes %}
<div class="grid-item {{ grid_item_width }}{% if sold_out %} sold-out{% endif %}{% if on_sale %} on-sale{% endif %}">
    <a href="{{ product.url | absolute_url }}" class="product-grid-item">
        <div class="product-grid-image">
            <div class="product-grid-image--centered">
                {% if sold_out %}
                    <div class="badge badge--sold-out">
                        <span class="badge-label">{{ 'products.product.sold_out' | t }}</span>
                    </div>
                {% endif %}
                <img src="{{ product.featured_image.src | img_url: image_size }}" alt="{{ product.featured_image.alt | escape }}" />
            </div>
        </div>
        <p>{{ product.title }}</p>
        <div class="product-item--price" ng-if="!productPricesLoaded">
            <span class="h1 medium--left">
                {% if on_sale %}
                    <span class="old">
                        {% include 'price' with product.compare_at_price %}
                    </span>
                {% endif %}
                {% include 'price' with product.price %}
            </span>
            {% if on_sale %}
                <span class="sale-tag medium--right{% if settings.product_reviews_enable %} has-reviews{% endif %}">
                    {% assign compare_price = product.compare_at_price %}
                    {% assign product_price = product.price %}
                    {% include 'price-sale' %}
                </span>
            {% endif %}
        </div>

        <div class="product-item--price" ng-if="productPricesLoaded">
            <span class="h1 medium--left">
                <span class="old" ng-if="productPrices['{{ product.id }}'].ListPrice.Amount > productPrices['{{ product.id }}'].SalePrice.Amount">
                    <small ng-bind="productPrices['{{ product.id }}'].ListPrice.FormatedAmount"></small>
                </span>
                <span class="old" ng-if="productPrices['{{ product.id }}'].ActiveDiscount.Amount.Amount > 0">
                    <small ng-bind="productPrices['{{ product.id }}'].SalePrice.FormatedAmount"></small>
                </span>
                <small ng-if="productPrices['{{ product.id }}'].ActiveDiscount.Amount.Amount == 0" ng-bind="productPrices['{{ product.id }}'].SalePrice.FormatedAmount"></small>
                <small ng-if="productPrices['{{ product.id }}'].ActiveDiscount.Amount.Amount > 0" ng-bind="((productPrices['{{ product.id }}'].SalePrice.Amount - productPrices['{{ product.id }}'].ActiveDiscount.Amount.Amount) | currency: productPrices['{{ product.id }}'].SalePrice.CurrencySymbol)"></small>
            </span>
            <span class="sale-tag medium--right" ng-if="productPrices['{{ product.id }}'].ListPrice.Amount > productPrices['{{ product.id }}'].SalePrice.Amount" ng-bind="'save ' + ((productPrices['{{ product.id }}'].ListPrice.Amount - productPrices['{{ product.id }}'].SalePrice.Amount) | currency: productPrices['{{ product.id }}'].SalePrice.CurrencySymbol)"></span>
            <span class="sale-tag medium--right" ng-if="productPrices['{{ product.id }}'].ActiveDiscount.Amount.Amount > 0" ng-bind="'save ' + productPrices['{{ product.id }}'].ActiveDiscount.Amount.FormatedAmount"></span>
        </div>

        <div class="product-item--other">
            {% comment %}
            {% if product.variants.size == 1 %}
                <button class="btn" type="button">{{ 'products.general.add_to_cart' | t }}</button>
                {% if product.is_quotable %}
                    <button class="btn" type="button">{{ 'products.general.add_to_quote' | t }}</button>
                {% endif %}
            {% endif %}
            {% endcomment %}
        </div>
        {% if settings.product_reviews_enable %}
            <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
        {% endif %}
    </a>
</div>