<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:complexType name="PropertyValue">
		<xs:attribute name="id" type="xs:string" use="required" />
		<xs:attribute name="value" type="xs:string" use="required" />
		<xs:attribute name="language" type="xs:string" use="optional" />
	</xs:complexType>

	<xs:complexType name="FilterProperty">
        <xs:sequence>
            <xs:element maxOccurs="unbounded" name="display" type="PropertyDisplay"/>
			<xs:element maxOccurs="unbounded" name="simple" type="PropertyValue"/>
		</xs:sequence>
		<xs:attribute name="key" type="xs:string" use="required" />
		<xs:attribute name="localized" type="xs:boolean" use="required" />
	</xs:complexType>

	<xs:complexType name="PropertyDisplay">
		<xs:sequence>
			<xs:element name="value" type="xs:string" />
			<xs:element name="seo" type="xs:string" />
		</xs:sequence>
		<xs:attribute name="language" type="xs:string" use="required" />
	</xs:complexType>

	<xs:complexType name="RangeValue">
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="display" type="PropertyDisplay"/>
		</xs:sequence>
		<xs:attribute name="lower" type="xs:string" use="required" />
		<xs:attribute name="upper" type="xs:string" use="required" />
		<xs:attribute name="id" type="xs:string" use="required" />
	</xs:complexType>

	<xs:complexType name="FilterRange">
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="range" type="RangeValue"/>
		</xs:sequence>
		<xs:attribute name="key" type="xs:string" use="required" />
		<xs:attribute name="localized" type="xs:boolean" use="required" />
	</xs:complexType>

	<xs:complexType name="FilterPriceRange">
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="range" type="RangeValue"/>
		</xs:sequence>
		<xs:attribute name="currency" type="xs:string" use="required" />
		<xs:attribute name="localized" type="xs:boolean" use="required" />
	</xs:complexType>

	<xs:complexType name="FilteredBrowsing">
		<xs:sequence>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="property" type="FilterProperty"></xs:element>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="propertyRange" type="FilterRange"></xs:element>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="price" type="FilterPriceRange"></xs:element>
		</xs:sequence>
	</xs:complexType>

	<xs:element name="browsing" type="FilteredBrowsing">
	</xs:element>

