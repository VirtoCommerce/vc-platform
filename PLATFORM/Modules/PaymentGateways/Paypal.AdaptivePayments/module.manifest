<?xml version="1.0" encoding="utf-8" ?>
<module>
    <id>Paypal.AdaptivePayments</id>
    <version>2.8.0</version>
    <platformVersion>2.8.0</platformVersion>
    <dependencies>
        <dependency id="VirtoCommerce.Core" version="2.8.0" />
    </dependencies>

    <title>Paypal Adaptive Payments Module</title>
    <description>Paypal api adaptive payments integartion</description>
    <authors>
        <author>Virto Commerce</author>
    </authors>
    <owners>
        <owner>Virto Commerce</owner>
    </owners>
    <projectUrl>http://virtocommerce.com/</projectUrl>
    <iconUrl>Modules/$(Paypal.AdaptivePayments)/Content/paypal_2014_logo.png</iconUrl>
    <releaseNotes>First version.</releaseNotes>
    <copyright>Copyright © 2011-2015 Virto Commerce. All rights reserved</copyright>
    <tags>paypal adaptive payments</tags>

    <assemblyFile>Paypal.AdaptivePayments.dll</assemblyFile>
    <moduleType>Paypal.AdaptivePayments.Module, Paypal.AdaptivePayments</moduleType>

		<settings>
				<group name="Payment methods|Paypal|Adaptive payments|Gateway settings">
						<setting>
								<name>Paypal.AdaptivePayments.Mode</name>
								<valueType>string</valueType>
								<allowedValues>
									<value>Sandbox</value>
									<value>Live</value>
								</allowedValues>
								<defaultValue>Sandbox</defaultValue>
								<title>Paypal api mode</title>
								<description>Type of api working mode (sandbox or live)</description>
						</setting>
						<setting>
								<name>Paypal.AdaptivePayments.APIUsername</name>
								<valueType>string</valueType>
								<title>API username</title>
								<description>Merchant api username credential</description>
						</setting>
						<setting>
								<name>Paypal.AdaptivePayments.APIPassword</name>
								<valueType>string</valueType>
								<title>API password</title>
								<description>Merchant api password credential</description>
						</setting>
						<setting>
								<name>Paypal.AdaptivePayments.APISignature</name>
								<valueType>string</valueType>
								<title>API signature</title>
								<description>Merchant api signature credential</description>
						</setting>
						<setting>
								<name>Paypal.AdaptivePayments.PaymentRedirectRelativePath</name>
								<valueType>string</valueType>
								<defaultValue>checkout/externalpaymentcallback</defaultValue>
								<title>Redirect relative path</title>
								<description>Relative path for paypal payment from paypal site to frontend</description>
						</setting>
						<setting>
								<name>Paypal.AdaptivePayments.AppId</name>
								<valueType>string</valueType>
								<title>Paypal app id</title>
								<description>Merchant application id</description>
						</setting>
				</group>
		</settings>
</module>
